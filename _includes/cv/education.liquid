{% comment %}
  Card-style education renderer (closer to the 2nd screenshot).
  Works for JSONResume + RenderCV fields.
  Optional: entry.logo (path to image in assets/img)
{% endcomment %}

<ul class="list-unstyled m-0 p-0">
  {% for entry in entries %}
    {% capture start_date %}
      {% if entry.start_date %}{{ entry.start_date }}{% elsif entry.startDate %}{{ entry.startDate }}{% endif %}
    {% endcapture %}
    {% capture end_date %}
      {% if entry.end_date %}{{ entry.end_date }}{% elsif entry.endDate %}{{ entry.endDate }}{% endif %}
    {% endcapture %}

    {% assign startYear = start_date | split: '-' | first %}
    {% assign endYear = end_date | split: '-' | first | default: 'Present' %}
    {% if startYear != '' %}
      {% assign date = startYear | append: ' – ' | append: endYear %}
    {% else %}
      {% assign date = '' %}
    {% endif %}

    {% capture study_type %}
      {% if entry.studyType %}{{ entry.studyType }}{% elsif entry.degree %}{{ entry.degree }}{% endif %}
    {% endcapture %}

    <li class="cv-card">
      <div class="cv-card-row">
        {% if entry.logo %}
          <div class="cv-card-logo">
            <img src="{{ entry.logo | relative_url }}" alt="{{ entry.institution }} logo" />
          </div>
        {% endif %}

        <div class="cv-card-body">
          <div class="cv-card-header">
            {% if entry.institution %}
              <div class="cv-card-title">
                {% if entry.url %}
                  <a href="{{ entry.url }}" target="_blank" rel="noopener">{{ entry.institution }}</a>
                {% else %}
                  {{ entry.institution }}
                {% endif %}
              </div>
            {% endif %}
          </div>

          <div class="cv-card-meta">
            {% if study_type != '' %}<strong>{{ study_type }}</strong>{% endif %}
            {% if study_type != '' and entry.area %} · {% endif %}
            {% if entry.area %}<em>{{ entry.area }}</em>{% endif %}
            {% if entry.score %} · GPA: {{ entry.score }}{% endif %}
          </div>

          <div class="cv-card-submeta">
            {% if entry.location %}{{ entry.location }}{% endif %}
            {% if entry.location and date != '' %} · {% endif %}
            {% if date != '' %}{{ date }}{% endif %}
          </div>

          {% if entry.department %}
            <div class="cv-card-line"><strong>Department/Program:</strong> {{ entry.department }}</div>
          {% endif %}
          {% if entry.scientific_project %}
            <div class="cv-card-line"><strong>Scientific project:</strong> {{ entry.scientific_project }}</div>
          {% endif %}
          {% if entry.minor_projects %}
            <div class="cv-card-line"><strong>Minor projects:</strong> {{ entry.minor_projects }}</div>
          {% endif %}
          {% if entry.summary %}
            <div class="cv-card-summary">{{ entry.summary }}</div>
          {% endif %}

          {% if entry.courses or entry.highlights %}
            <ul class="cv-card-bullets">
              {% for item in entry.courses %}
                <li>{{ item }}</li>
              {% endfor %}
              {% for item in entry.highlights %}
                <li>{{ item | markdownify | remove: '<p>' | remove: '</p>' }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
